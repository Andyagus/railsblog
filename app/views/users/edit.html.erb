<div class="edit_user">
  <h2> Editing User</h2>
  
  <div class= "edit_form">

  <table>
    <tr>
      <%= form_for @user do |f| %>
      <td><%= f.label :username %></td>
      <td><%= f.text_field :username, {placeholder: 'Username'} %> </td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password, {placeholder: 'Password'} %> </td>
      </tr>
      <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation, {placeholder: 'Confirm Password'} %></td>
 
      </tr>
        <td><%= f.label :fname %></td>
        <td><%= f.text_field :fname, {placeholder: 'First Name'} %></td> 
      <tr>
        <td><%= f.label :lname %></td>
        <td><%= f.text_field :lname, {placeholder: 'Last Name'} %></td> 
      </tr>
        <td><%= f.label :age %></td>
       <td><%= text_field_tag :age, nil, {placeholder: 'Years old'} %></td> 
      <tr>
       <td><%= f.label :location %></td>
       <td><%= f.text_field :location, {placeholder: 'Location'} %> </td>
      </tr>
      <tr>
       <td><%= f.submit :Submit %></td>
      </tr>
  </table>

  <%= link_to 'Show', @user %>
  <%= link_to 'Back', user_path %>
  <% end %>
  </div>

</div>




