<div class="new_user">
  <h2> Editing User</h2>
  
  <div class= "new_form">

<table>
  <tr>
    <%= form_for @user do |f| %>
    <td><%= f.label :username %></td>
    <td><%= f.text_field :username, {placeholder: 'Username'} %> </td>
  </tr>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password, {placeholder: 'Password'} %> </td>
  </tr>
  <tr>
    <td><%= f.label :Confirm %></td>
    <td> <%= password_field_tag( :password_confirmation,nil, placeholder: "Password Confirmation") %> 
  </tr>
    <td><%= f.label :fname %></td>
    <td><%= f.text_field :fname, {placeholder: 'First Name'} %></td> 
  <tr>
  <td><%= f.label :lname %></td>
  <td><%= f.text_field :lname, {placeholder: 'Last Name'} %></td> 
  </tr>
  <td><%= f.label :age %></td>
  <td><%= text_field_tag :age, nil, {placeholder: 'Years old'} %></td> 
  <tr>
  <td><%= f.label :location %></td>
  <td><%= f.text_field :location, {placeholder: 'Location'} %> </td>
  </tr>
  <tr>
  <td><%= f.submit :Submit%></td>
  </tr>
  <% end %>
  </table>
  </<br>
  </div>
  <div class="setting">
  <%= link_to 'Back', user_path %><br>
    <% if current_user[:id]%>
      <%=link_to 'Delete', @user, method: :delete, data: {confirm: "You sure?"} %>
    <% end %>
  </div>
  
</div>




